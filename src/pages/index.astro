---
import BaseLayout from "../layouts/BaseLayout.astro";

const token = Astro.cookies.get("token").value;

if (!token) {
  return Astro.redirect("/login");
}
---

<BaseLayout>
  <main>
    <p>
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Vero totam
      dolorem sint a placeat. Odio, debitis non perferendis optio asperiores
      impedit amet doloremque expedita consectetur et ullam aliquid quibusdam
      omnis!
    </p>
  </main>
</BaseLayout>

<style>
  main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24rem, 1fr));
    grid-template-rows: min-content;
    grid-gap: 1rem;
  }

  a {
    background-color: var(--bg);
    height: max-content;
    padding: 1rem;
    border-radius: var(--border-radius);
    transition: var(--transition);
    font-size: 1.25rem;
    font-weight: bold;
    border: var(--border);

    &:hover {
      background-color: var(--primary);
      color: var(--on-primary);
    }
  }
</style>
