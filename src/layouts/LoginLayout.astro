---
import Head from "../components/layout/Head.astro";

import "../styles/style.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={`${title} | Ulquiorra`} />
  </head>
  <body>
    <slot />
    <style>
      body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        min-height: 100dvh;
        background-color: var(--bg);
        color: var(--text);
        text-align: center;
      }
    </style>
  </body>
</html>
