<server-link-button type="button">Gedanken Versichert</server-link-button>

<style lang="scss">
  server-link-button {
    background-color: transparent;
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: var(--transition);

    &:hover {
      background-color: var(--primary);
      color: var(--on-primary);
    }
  }
</style>

<script>
  import { $toastText } from "../../scripts/stores";

  class ServerLinkButton extends HTMLElement {
    constructor() {
      super();
      const serverLink = "https://discord.gg/MfmUFk5kbe";

      this.addEventListener("click", () => {
        navigator.clipboard.writeText(serverLink);
        $toastText.set("Copied server link to clipboard");
      });
    }
  }

  customElements.define("server-link-button", ServerLinkButton);
</script>
