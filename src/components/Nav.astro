---
import Icons from "./Icons.astro";
---

<nav>
  <a href="/"><Icons name="home" /> Home</a>
  <a href="/punishments"><Icons name="hammer" /> Punishments</a>
</nav>

<style>
  nav {
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    margin-left: 0.5rem;
    left: 0;
    gap: 1rem;
  }

  a {
    width: 100%;
    display: grid;
    padding: 0.5rem 0.25rem;
    text-align: center;
    border-radius: 0.5rem;
    transition: var(--transition);

    &:hover {
      background-color: var(--primary);
      color: var(--on-primary);
    }
  }
</style>
