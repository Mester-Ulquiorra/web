---
import LoginButton from "./LoginButton.astro";
import Toast from "./Toast.astro";
import { getUserData } from "../scripts/userData";
import UserProfile from "./UserProfile.astro";

const token = Astro.cookies.get("token").value;
const userData = token ? await getUserData(token) : null;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header>
  <h1>{title}</h1>
  {
    userData ? (
      <UserProfile
        userId={userData.userId}
        avatar={userData.avatar}
        userTag={userData.userTag}
      />
    ) : (
      <LoginButton />
    )
  }
</header>
<Toast id="server-link">Copied server link to clipboard!</Toast>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background-color: var(--bg);
    border-bottom: var(--border);
  }
</style>

<script>
  import { $toastText } from "../scripts/stores";

  const serverLinkButton = document.getElementById(
    "server-link"
  ) as HTMLButtonElement;
  const serverLink = "https://discord.gg/MfmUFk5kbe";

  serverLinkButton
    ? serverLinkButton.addEventListener("click", () => {
        navigator.clipboard.writeText(serverLink);
        $toastText.set("Copied server link to clipboard");
      })
    : "";
</script>
