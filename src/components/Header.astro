---
import LoginButton from "./LoginButton.astro";
import Icons from "./Icons.astro";
---

<header>
    <a href="/"><Icons name="home" /></a>
    <LoginButton />
    <div id="user-info">
        <img id="avatar" src="" alt="" />
        <p id="username"></p>
        <a class="logout" href=`${Astro.site}api/user/logout`>Log out</a>
    </div>
</header>

<style>
    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    div {
        display: none;
        gap: 0.5rem;
        position: relative;
        cursor: pointer;

        &:hover a {
            visibility: visible;
            opacity: 1;
            transform: translate(-50%, 75%);
        }
    }

    img {
        height: 1.75rem;
        border-radius: 100vmax;
    }

    p {
        font-size: 1.25rem;
        font-weight: bold;
    }

    a {
        background-color: transparent;
        padding: 0.5rem;
        border-radius: 0.5rem;
        transition: var(--transition);
        
        &:hover {
            background-color: var(--primary);
        }
    }

    .logout {
        visibility: hidden;
        opacity: 0;
        color: var(--text);
        gap: 0.5rem;
        font-weight: bold;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);

        &::selection {
            background-color: var(--secondary);
        }
    }
</style>
