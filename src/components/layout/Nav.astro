---
import Icons from "../Icons.astro";
import { getUserData } from "../../scripts/userData";

const token = Astro.cookies.get("token").value;
const userData = token ? await getUserData(token) : null;
---

<nav>
  <a href="/"><Icons name="home" /> Home</a>
  <a href="/punishments"><Icons name="hammer" /> Punishments</a>
  <a href="/alerts"
    ><Icons name="bell" />Alerts<span id="unread"
      >{userData?.alerts.length}</span
    ></a
  >
</nav>

<style lang="scss">
  nav {
    display: grid;
    grid-auto-rows: min-content;
    align-items: center;
    overflow: auto;
    gap: 1rem;
    width: fit-content;

    @media (max-width: 768px) {
      order: 1;
      grid-auto-flow: column;
      width: 100%;
    }
  }

  a {
    position: relative;
    display: grid;
    padding: 0.5rem 0.25rem;
    text-align: center;
    border-radius: var(--border-radius);
    transition: var(--transition);

    &:hover {
      background-color: var(--primary);
      color: var(--on-primary);
    }
  }

  span {
    position: absolute;
    right: 2rem;
    top: 0.5rem;
  }
</style>

<script>
  const currentLocation = document.querySelector(
    `a[href="${location.pathname}"]`
  ) as HTMLAnchorElement;

  if (currentLocation) {
    currentLocation.style.backgroundColor = "var(--primary)";
    currentLocation.style.color = "var(--on-primary)";
  }
</script>

<script>
  if (location.pathname === "/alerts") {
    document.getElementById("unread")?.remove();
  }
</script>
