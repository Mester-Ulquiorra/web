---
import { getUrl, localDate } from "../scripts/functions";
import { getUserData } from "../scripts/userData";

const url = getUrl();
const userData = await getUserData(url);
---

{userData ? <footer>Last fetched: {localDate(userData.lastFetch)}</footer> : ""}

<style>
  footer {
    text-align: center;
    opacity: 0.75;
    font-size: 0.75rem;
    padding: 0.5rem;
    border-top: var(--border);
  }
</style>
