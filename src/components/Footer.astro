---
import { localDate } from "../scripts/functions";
import { getUserData } from "../scripts/userData";

const token = Astro.cookies.get("token").value;
const userData = token ? await getUserData(token) : null;
---

{userData && <footer>Last fetched: {localDate(userData.lastFetch)}</footer>}

<style>
  footer {
    text-align: center;
    opacity: 0.75;
    font-size: 0.75rem;
    padding: 0.5rem;
    border-top: var(--border);
  }
</style>
